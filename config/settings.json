{
  "// CURSOR IDE SETTINGS - CẤU HÌNH TỐI ƯU": "Cấu hình này được tối ưu cho Python development",
  
  "// === GIAO DIỆN & THEME ===": "",
  "workbench.colorTheme": "Dark+ (default dark)",
  "workbench.iconTheme": "vs-seti",
  "workbench.productIconTheme": "Default",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabCloseButton": "right",
  "workbench.sideBar.location": "left",
  "workbench.panel.defaultLocation": "bottom",
  
  "// === EDITOR SETTINGS ===": "",
  "editor.fontSize": 14,
  "editor.fontFamily": "Consolas, 'Courier New', 'Fira Code', monospace",
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.5,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.rulers": [80, 120],
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnEnter": "on",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.parameterHints.enabled": true,
  "editor.hover.enabled": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll": true
  },
  
  "// === AI ASSISTANT SETTINGS ===": "",
  "cursor.ai.enabled": true,
  "cursor.ai.model": "claude-3.5-sonnet",
  "cursor.ai.autoComplete": true,
  "cursor.ai.suggestions": true,
  "cursor.ai.maxTokens": 4000,
  "cursor.ai.temperature": 0.7,
  "cursor.ai.contextLines": 50,
  "cursor.ai.includeGitContext": true,
  "cursor.ai.includeFileContext": true,
  
  "// === PYTHON SETTINGS ===": "",
  "python.defaultInterpreterPath": "python",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": false,
  "python.linting.banditEnabled": true,
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length=88"],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoSearchPaths": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.terminal.activateEnvironment": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  
  "// === FILE SETTINGS ===": "",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/*.pyd": true,
    "**/.Python": true,
    "**/pip-log.txt": true,
    "**/pip-delete-this-directory.txt": true,
    "**/.tox": true,
    "**/.coverage": true,
    "**/.coverage.*": true,
    "**/.cache": true,
    "**/nosetests.xml": true,
    "**/coverage.xml": true,
    "**/*.cover": true,
    "**/.hypothesis": true,
    "**/.pytest_cache": true,
    "**/htmlcov": true,
    "**/.mypy_cache": true,
    "**/.dmypy.json": true,
    "**/dmypy.json": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/build": true,
    "**/.vscode": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/__pycache__/**": true,
    "**/venv/**": true,
    "**/.venv/**": true,
    "**/env/**": true,
    "**/.env/**": true
  },
  
  "// === SEARCH SETTINGS ===": "",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.git": true,
    "**/__pycache__": true,
    "**/venv": true,
    "**/.venv": true,
    "**/env": true,
    "**/.env": true,
    "**/dist": true,
    "**/build": true,
    "**/*.pyc": true,
    "**/*.pyo": true
  },
  "search.useGlobalIgnoreFiles": true,
  "search.useIgnoreFiles": true,
  "search.smartCase": true,
  
  "// === TERMINAL SETTINGS ===": "",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.shell.windows": "powershell.exe",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": "C:\\Windows\\System32\\cmd.exe",
      "args": [],
      "icon": "terminal-cmd"
    }
  },
  
  "// === GIT SETTINGS ==="": "",
  "git.enabled": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.showPushSuccessNotification": true,
  "git.autoStash": true,
  "git.allowCommitSigning": false,
  "git.ignoreLimitWarning": true,
  "git.ignoreSubmodules": true,
  "git.decorations.enabled": true,
  "git.decorations.colors": true,
  "git.decorations.badges": true,
  
  "// === PERFORMANCE SETTINGS ==="": "",
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.suggest.autoImports": false,
  "editor.suggest.showKeywords": false,
  "editor.suggest.showSnippets": false,
  "editor.suggest.showClasses": true,
  "editor.suggest.showFunctions": true,
  "editor.suggest.showVariables": true,
  "editor.suggest.showModules": true,
  "editor.suggest.showProperties": true,
  "editor.suggest.showEvents": true,
  "editor.suggest.showOperators": false,
  "editor.suggest.showUnits": false,
  "editor.suggest.showColors": false,
  "editor.suggest.showFiles": false,
  "editor.suggest.showReferences": false,
  "editor.suggest.showCustomcolors": false,
  "editor.suggest.showFolders": false,
  "editor.suggest.showTypeParameters": true,
  "editor.suggest.showWords": false,
  
  "// === EXTENSIONS SETTINGS ==="": "",
  "extensions.autoUpdate": true,
  "extensions.autoCheckUpdates": true,
  "extensions.ignoreRecommendations": false,
  "extensions.showRecommendationsOnlyOnDemand": false,
  
  "// === KEYBOARD SHORTCUTS ==="": "",
  "keyboard.dispatch": "keyCode",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.selectionClipboard": false,
  "editor.columnSelection": false,
  "editor.cursorBlinking": "blink",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 0,
  "editor.cursorSurroundingLines": 0,
  "editor.cursorSurroundingLinesStyle": "default",
  
  "// === WORKBENCH SETTINGS ==="": "",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 10,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.closeEmptyGroups": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.labelFormat": "default",
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,
  "workbench.editor.restoreViewState": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.enablePreviewFromCodeNavigation": false,
  
  "// === EXPLORER SETTINGS ==="": "",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": true,
  "explorer.incrementalNaming": "smart",
  "explorer.openEditors.visible": 0,
  "explorer.sortOrder": "type",
  "explorer.autoReveal": true,
  "explorer.autoRevealExclude": {
    "**/node_modules": true,
    "**/__pycache__": true
  },
  
  "// === BREADCRUMBS ==="": "",
  "breadcrumbs.enabled": true,
  "breadcrumbs.showFiles": true,
  "breadcrumbs.showSymbols": true,
  "breadcrumbs.showClasses": true,
  "breadcrumbs.showMethods": true,
  "breadcrumbs.showFunctions": true,
  "breadcrumbs.showConstructors": true,
  "breadcrumbs.showFields": true,
  "breadcrumbs.showVariables": true,
  "breadcrumbs.showConstants": true,
  "breadcrumbs.showEnums": true,
  "breadcrumbs.showEnumMembers": true,
  "breadcrumbs.showEvents": true,
  "breadcrumbs.showOperators": true,
  "breadcrumbs.showModules": true,
  "breadcrumbs.showProperties": true,
  "breadcrumbs.showValues": true,
  "breadcrumbs.showStructs": true,
  "breadcrumbs.showInterfaces": true,
  "breadcrumbs.showNamespaces": true,
  "breadcrumbs.showPackages": true,
  "breadcrumbs.showTypeParameters": true,
  
  "// === OUTLINE SETTINGS ==="": "",
  "outline.showFiles": true,
  "outline.showModules": true,
  "outline.showPackages": true,
  "outline.showClasses": true,
  "outline.showMethods": true,
  "outline.showFunctions": true,
  "outline.showConstructors": true,
  "outline.showFields": true,
  "outline.showVariables": true,
  "outline.showConstants": true,
  "outline.showEnums": true,
  "outline.showEnumMembers": true,
  "outline.showEvents": true,
  "outline.showOperators": true,
  "outline.showStructs": true,
  "outline.showInterfaces": true,
  "outline.showNamespaces": true,
  "outline.showTypeParameters": true,
  "outline.showValues": true,
  "outline.showProperties": true,
  
  "// === TIMELINE SETTINGS ==="": "",
  "timeline.excludeSources": [],
  "timeline.pageSize": 30,
  "timeline.pageOnScroll": true,
  
  "// === PROBLEMS SETTINGS ==="": "",
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,
  "problems.sortOrder": "severity",
  
  "// === OUTPUT SETTINGS ==="": "",
  "output.smartScroll.enabled": true,
  
  "// === DEBUG SETTINGS ==="": "",
  "debug.console.fontSize": 13,
  "debug.console.fontFamily": "Consolas, 'Courier New', monospace",
  "debug.console.lineHeight": 1.5,
  "debug.console.wordWrap": true,
  "debug.console.acceptSuggestionOnEnter": "on",
  "debug.console.historyLength": 1000,
  "debug.console.scrollToBottom": true,
  "debug.console.cursorBlinking": true,
  "debug.console.cursorStyle": "line",
  
  "// === CUSTOM SETTINGS ==="": "",
  "emmet.includeLanguages": {
    "python": "html"
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.showExpandedAbbreviation": "always",
  "emmet.showAbbreviationSuggestions": true,
  "emmet.syntaxProfiles": {
    "python": "html"
  }
}
